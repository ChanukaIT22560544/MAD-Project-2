        <TextView
            android:layout_width="284dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="ID : IT22560544"
            android:textSize="16dp" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
