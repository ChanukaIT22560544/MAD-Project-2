<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@drawable/wave__1_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_menu_50"
            android:id="@+id/menu"/>

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Hello Chanuka!"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="62dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_account_circle_24"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="62dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="610dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="305dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/e9"
                />



            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/e3"
               />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/e5"
             />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
          />

        </LinearLayout>
    </HorizontalScrollView>


    <SearchView
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundedconer" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="134dp"
        android:layout_height="21dp"
        android:fontFamily="sans-serif-medium"
        android:text="Catagory"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <HorizontalScrollView
        android:layout_width="610dp"
        android:layout_height="96dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="305dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <Button
                android:id="@+id/m0"
                android:layout_width="103dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedconer"
                android:text="Sport"/>

            <Button
                android:id="@+id/b2"
                android:layout_width="103dp"
                android:layout_height="65dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundconer2"
                android:text="Music"/>

            <Button
                android:id="@+id/m3"
                android:layout_width="103dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedconer"
                android:layout_height="65dp"

                android:text="Drama"/>

            <Button
                android:id="@+id/m4"
                android:layout_width="103dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedconer"
                android:layout_height="65dp"

                android:text="Films"/>

            <Button
                android:id="@+id/m5"
                android:layout_width="103dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedconer"
                android:layout_height="65dp"

                android:text="Comedy"/>

            <Button
                android:id="@+id/m6"
                android:layout_width="103dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedconer"
                android:layout_height="65dp"
                />

            <Button
                android:id="@+id/m7"
                android:layout_width="103dp"
                android:layout_height="65dp"
                android:layout_margin="5dp" />

        </LinearLayout>


    </HorizontalScrollView>

    <ScrollView
        android:layout_width="401dp"
        android:layout_height="311dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/e10"
                android:layout_width="399dp"
                android:layout_height="205dp"
                android:layout_margin="20dp"
                android:src="@drawable/e9" />

            <ImageView
                android:layout_width="458dp"
                android:layout_height="259dp"
                android:src="@drawable/e5" />

            <ImageView
                android:layout_width="499dp"
                android:layout_height="281dp"
                android:src="@drawable/e6"
                android:layout_margin="10dp"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="61dp"

        android:layout_marginLeft="10dp"
        >

        <Button
            android:id="@+id/home2"
            android:layout_width="61dp"
            android:layout_height="42dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"

            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="665dp"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/icons8_home_50"/>

        <Button
            android:id="@+id/m2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="665dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/icons8_menu_50"/>

        <Button
            android:id="@+id/fav2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="665dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/icons8_favorite_folder_50"/>

        <Button
            android:id="@+id/prof2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="665dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:background="#00FFFFFF"
            android:drawableStart="@drawable/icons8_account_50"/>

    </LinearLayout>



</LinearLayout>
